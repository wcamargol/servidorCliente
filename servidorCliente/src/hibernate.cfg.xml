<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/SSHouse</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.show_sql">true</property>
    <mapping class="model.beans.AlarmeBean"/>
    <mapping class="model.beans.AmbienteBean"/>
    <mapping class="model.beans.AtuadorBean"/>
    <mapping class="model.beans.EventoBean"/>
    <mapping class="model.beans.EventoIdBean"/>
    <mapping class="model.beans.MoradorBean"/>
    <mapping class="model.beans.OperacaoBean"/>
    <mapping class="model.beans.OperacaoIdBean"/>
    <mapping class="model.beans.SensorBean"/>
  </session-factory>
</hibernate-configuration>
